<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="/style.css">
<link href="https://pro.fontawesome.com/releases/v5.13.1/css/all.css" rel="stylesheet"> 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<title><%- title %></title>
</head>
<body class="body">
<div class="container">
<div class="card m-t">
<div class="card-body">
<form method="POST" action="/new/task/<%= user._id %>">
<div class="row justify-content-center" style="gap:1.2vw">
<input type="text" id="todo" name="todo" class="form-control w-75" placeholder="Yenisini Ekle">
<input style="width:20%" type="submit" class="btn btn-success">
</div>
</form>
</div>  
</div>
  
<div class="card m-t">
<div class="card-body">
<h4><i style="margin-right:1.2vw;" class="fal fa-tasks"></i> YapÄ±lacaklar Listesi</h4>
<div class="row">
<% list.forEach( list => { %> 
<div style="width:90%">
<% if(list.status == "new"){ %>
<form method="POST" action="/finish/task/<%= list._id %>"> 
<button type="submit" style="text-align:left" class="btn col-12"><%= list.todo %></button>  
</form>
<% } else { %>
<form method="POST" action="/unfinish/task/<%= list._id %>"> 
<button type="submit" style="text-align:left" class="btn col-12">
<label style="text-decoration: line-through;"><%= list.todo %></label>  
</button>  
</form>
<% } %>
</div>
<div style="width:10%">
<form method="POST" action="/remove/task/<%= list._id %>">
<button style="width:100%;padding:0;margin:0;" type="submit" class="btn text-danger">
<i class="fal fa-trash-alt"></i>
</button>  
</form>
</div>
<% }) %>
</div>
</div>  
</div>
</div>
</body>
